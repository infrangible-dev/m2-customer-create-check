<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <infrangible_customercreatecheck>
            <firstname>
                <deny_check>1</deny_check>
                <deny_pattern>(http:\/\/www\.|https:\/\/www\.|http:\/\/|https:\/\/)?[a-z0-9]+([\-\.][a-z0-9]+)*\.[a-z]{2,5}(:[0-9]{1,5})?(\/.*)?</deny_pattern>
            </firstname>
            <middlename>
                <deny_check>1</deny_check>
                <deny_pattern>(http:\/\/www\.|https:\/\/www\.|http:\/\/|https:\/\/)?[a-z0-9]+([\-\.][a-z0-9]+)*\.[a-z]{2,5}(:[0-9]{1,5})?(\/.*)?</deny_pattern>
            </middlename>
            <lastname>
                <deny_check>1</deny_check>
                <deny_pattern>(http:\/\/www\.|https:\/\/www\.|http:\/\/|https:\/\/)?[a-z0-9]+([\-\.][a-z0-9]+)*\.[a-z]{2,5}(:[0-9]{1,5})?(\/.*)?</deny_pattern>
            </lastname>
        </infrangible_customercreatecheck>
    </default>
</config>
